{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-close",
    "core:window:allow-minimize",
    "core:window:allow-toggle-maximize",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "/**"
        },
        {
          "path": "**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    }
  ]
}